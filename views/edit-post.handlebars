<div class="row mb-4 project">
    <div class="col-md-5">
        <h2>
            <a href="/post/{{id}}">{{title}}</a>
        </h2>
        <p>Created by {{user.username}} on {{format_date date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{content}}
        </p>
    </div>
</div>

<div class="row mb-4 project mt-5">
    <div class="col-md-5">
        <h2>Update Post</h2>
    </div>
    <div class="col-md-7">
        <form>
            <label>Post Title</label>
            <input type="text" id="post-title" class="w-100 custom-input-height" value="{{title}}" required>
            <label>Post Content</label>
            <input type="text" id="post-body" class="w-100 custom-input-height" value="{{content}}" required>
            <button id="new-post-form" class="mt-2 mb-2">Submit</button>
        </form>
    </div>
</div>

<p id="post-id" class="custom-hidden">{{id}}</p>

<script src="/js/update.js"></script>